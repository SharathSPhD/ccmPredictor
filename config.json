        "tau": 1,
        "exclusion_radius": 0,
        "k_nearest": 4
    },
    "plotting": {
        "time_series": {
            "figure_size": [15, 5],
            "dpi": 300
        },
        "heatmap": {
            "figure_size": [10, 8],
            "dpi": 300
        },
        "predictions": {
            "figure_size": [15, 5],
            "dpi": 300
        }
    }
}